{{#partial "content"}}


        {{#each allMembers}} <!--loop-->

        <h3>Member Name:</h3><h5> {{ name }}</h5>
        <h3>Member Age:</h3><h5> {{ age }}</h5>
        <h3>Member email</h3><h5> {{ description }}</h5><hr>
        <br>

        {{/each}}
    <h1>Add Members!</h1>
    <form action="/" method="post">
        <input id="teamId" name="teamId" type="hidden" value="{{team.getId}}">
        <label for="name">Participant Name:</label>
        <input id="name" name="name" type="text">
        <label for="age">Participant Age:</label>
        <input id="age" name="age" type="text">
        <label for="description">Participant Email:</label>
        <input id="description" name="description" type="text">
        <button type="submit" class="btn btn-default">Add Team Member!</button>
    </form>

{{/partial}}


{{> layout.hbs}}
