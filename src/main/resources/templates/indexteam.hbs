{{#partial "content"}}

    <h1>Teams</h1>

    {{#if allTeams}}
        {{#each allTeams}} <!--loop-->
        <h3>Team Name:</h3>
        <h5><br> {{ nameOfTeam }}</h5>
        <a href="/teams/{{id}}"> Edit Team Name</a></p>
        <hr>
        {{/each}}
    {{else}}
        <p>No Teams Added!</p>
    {{/if}}


<h1>Add a new Team!</h1>

<form action="/teams/new" method="post">
    <label for="nameOfTeam">Add Team</label>
    <input id="nameOfTeam" name="nameOfTeam" type="text">

    <button type="submit" class="btn btn-default">Add New Team!</button>
</form>
{{/partial}}

