{{#partial "content"}}

    {{#if editTeams}}
        <h1>Edit this Team!</h1>
        <form action="/teams/{{editTeams.id}}/update" method="post">
            <label for="nameOfTeam">Edit the Team Name</label>
            <input id="nameOfTeam" name="nameOfTeam" type="text" value="{{editTeam.nameOfTeam}}" required>
            <button type="submit" class="btn btn-default">Edit Team Name</button>
        </form>

    {{else}}
        <h2>New Team!</h2>
        <form action="/teams/new" method="post">
            <div class="form-group">
            <label for="nameOfTeam">Add Team</label>
            <input id="nameOfTeam" name="nameOfTeam" class="form-control" type="text" required>
            </div>
            <div class="form-group">
            <label for="description">Add Description of Project</label>
            <input id="description" name="description" class="form-control" type="text" required>
            </div>
    {{/if}}
            <button type="submit" class="btn">Add New Team!</button>
        </form>
{{/partial}}

{{> layout.hbs}}

